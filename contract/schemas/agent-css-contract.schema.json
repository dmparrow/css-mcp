{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://arrow-stack-themer.dev/schemas/agent-css-contract.schema.json",
  "type": "object",
  "required": [
    "version",
    "project",
    "tokenUsage",
    "themeVariables",
    "taskWriteSurfaces",
    "layerInvariants",
    "componentApi"
  ],
  "properties": {
    "version": { "type": "string" },
    "project": { "type": "string" },
    "tokenUsage": {
      "type": "object",
      "required": ["scanPaths"],
      "properties": {
        "scanPaths": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        }
      }
    },
    "logging": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "level": {
          "type": "string",
          "enum": ["debug", "info", "warn", "error"]
        },
        "format": {
          "type": "string",
          "enum": ["json", "text"]
        }
      }
    },
    "themeVariables": {
      "type": "object",
      "required": ["count", "writeSurface", "variables"],
      "properties": {
        "count": { "type": "integer", "minimum": 1 },
        "writeSurface": { "type": "array", "items": { "type": "string" } },
        "variables": { "type": "array", "items": { "type": "string" } }
      }
    },
    "taskWriteSurfaces": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": { "type": "string" }
      }
    },
    "layerInvariants": {
      "type": "object",
      "required": ["mainCss", "requiredImports", "requiredLayers"],
      "properties": {
        "mainCss": { "type": "string" },
        "requiredImports": { "type": "array", "items": { "type": "string" } },
        "requiredLayers": { "type": "array", "items": { "type": "string" } }
      }
    },
    "componentApi": {
      "type": "object",
      "required": ["dataAttributes"],
      "properties": {
        "dataAttributes": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
