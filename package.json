{
  "name": "arrow-stack-css-validator",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "CLI + MCP + stylelint validator for CSS/SCSS contracts with logging support",
  "main": "./dist/cli/index.js",
  "bin": {
    "arrow-validate": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/cli/index.js",
      "types": "./dist/cli/index.d.ts"
    },
    "./stylelint": {
      "import": "./dist/plugins/stylelint/index.js",
      "types": "./dist/plugins/stylelint/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "vitest run",
    "validate": "tsx src/cli/index.ts validate",
    "explain": "tsx src/cli/index.ts explain",
    "generate": "tsx src/cli/index.ts generate",
    "mcp:dev": "tsx src/mcp/server.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "stylelint": "^16.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
